{{>layout/header}}

<h1 id="board">Issue Board</h1>
<!-- loader -->
<div class="loader"></div>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-6">
      <form id="list-form">
      <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="userId"
            placeholder="토큰 소유자 아이디"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="token"
            placeholder="토큰 값"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="repo"
            placeholder="owner/repo"
          />
        </div>
        <button type="button" class="btn btn-primary" id="btn-list">
          조회
        </button>
      </form>
    </div>
  </div>
  <div class="row">
    <!-- issue chart -->
    <div class="col-md-4">
      <button type="button" class="btn" id="btn-chart">Chart ▼</button>
    </div>
    <div class="col-md-12" id="chart">
      <figure class="highcharts-figure">
        <div id="container"></div>
      </figure>
    </div>
    <!-- download csv -->
    <div class="col-md-4">
      <button type="button" class="btn btn-secondary" id="download">
        Download
      </button>
    </div>
  </div>
  <!-- <div class="row"></div> -->
  <div class="row">
    <!-- label list -->
    <div class="col-md-6">
      <div class="label-group"></div>
    </div>
  </div>
  <div class="row">
    <!-- all / open / closed filtering -->
    <div class="col-md-4" id="state">
      <button type="button" id="btn-all" value="&state=all">ALL</button> /
      <button type="button" id="btn-open" value="&state=open">OPEN</button>
      /
      <button type="button" id="btn-close" value="&state=closed">
        CLOSED
      </button>
    </div>
    <!-- issue list -->
    <div class="col-md-12">
      <div class="list-group"></div>
    </div>
  </div>

  {{>layout/footer}}
</div>
